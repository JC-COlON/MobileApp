<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="DigesettAPP.ViewCiudadano.PoputInformacionRating">

    <!-- Contenido del Pop-up -->
    <StackLayout Padding="20" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" BackgroundColor="White">


        <!-- Título del pop-up -->
        <Label Text="¡Multa Registrada Exitosamente!"
               HorizontalTextAlignment="Center"
               FontSize="Large"/>


        <!-- Botón para cerrar el pop-up -->
        <Button Text="Aceptar" Clicked="ClosePopup" BackgroundColor="#009C40" Margin="0,40,0,0"/>
    </StackLayout>
</toolkit:Popup>
