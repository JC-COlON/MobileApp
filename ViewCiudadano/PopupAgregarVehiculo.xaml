<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="DigesettAPP.ViewCiudadano.PopupAgregarVehiculo">

    <ScrollView>
        <StackLayout Padding="20" BackgroundColor="White" Spacing="15">
            <Label Text="Agregar Vehículo"
               FontSize="24"
               HorizontalOptions="Center"
               FontAttributes="Bold"
               Margin="0,0,0,10"/>

            <Frame CornerRadius="10" BorderColor="Black" Padding="5" WidthRequest="300" >
                <Entry x:Name="PlacaEntry" Placeholder="Placa" Margin="0,-3,0,-14" FontSize="18" WidthRequest="290" FontAttributes="Bold"/>
            </Frame>

            <Frame CornerRadius="10" BorderColor="Black" Padding="5" WidthRequest="300" >
                <Entry x:Name="MarcaEntry" Placeholder="Marca" Margin="0,-3,0,-14" FontSize="18" WidthRequest="290" FontAttributes="Bold"/>
            </Frame>

            <Frame CornerRadius="10" BorderColor="Black" Padding="5" WidthRequest="300" >
                <Entry x:Name="ModeloEntry" Placeholder="Modelo" Margin="0,-3,0,-14" FontSize="18" WidthRequest="290" FontAttributes="Bold" />
            </Frame>

            <Frame CornerRadius="10" BorderColor="Black" Padding="5" WidthRequest="300" >
                <Entry x:Name="ColorEntry" Placeholder="Color" Margin="0,-3,0,-14" FontSize="18" WidthRequest="290" FontAttributes="Bold" />
            </Frame>
            
            <Frame CornerRadius="10" BorderColor="Black" Padding="5" WidthRequest="300" >
                <Entry x:Name="YearEntry" Placeholder="Año" Keyboard="Numeric" Margin="0,-3,0,-14" FontSize="18" WidthRequest="290"  FontAttributes="Bold"/>
            </Frame>

            <Button Text="Guardar" Clicked="OnGuardarClicked" BackgroundColor="#009C40" TextColor="White" WidthRequest="300"/>
            <Button Text="Cancelar" Clicked="OnCancelarClicked" BackgroundColor="Gray" TextColor="White" WidthRequest="300"/>
        </StackLayout>
    </ScrollView>

</toolkit:Popup>
