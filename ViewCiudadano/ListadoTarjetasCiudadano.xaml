<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DigesettAPP.ViewModel"
             x:Class="DigesettAPP.ViewCiudadano.ListadoTarjetasCiudadano">

    <ContentPage.BindingContext>
        <local:ListadoTarjetaCiudadanoViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <Grid>
            <!-- Contenido principal -->
            <ScrollView>
                <VerticalStackLayout Padding="10">
                    <Label Text="Tus Tarjetas Registradas"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           Margin="0,-10,0,25" />
                   
                    <!-- Muestra las tarjetas registradas -->
                    <CollectionView x:Name="TarjetasCollectionView" ItemsSource="{Binding Tarjetas}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame CornerRadius="10"
                                       Padding="10"
                                       Margin="0,5"
                                       HasShadow="True"
                                       BackgroundColor="#ffffff">
                                    <Grid ColumnDefinitions="Auto,*,Auto"
                                          VerticalOptions="Center"
                                          ColumnSpacing="10">

                                        <Image Source="tarjeta.png"
                                               WidthRequest="50"
                                               HeightRequest="35"
                                               VerticalOptions="Center" />

                                        <Label Grid.Column="1"
                                               Text="{Binding CardNumberMasked}" 
                                               FontSize="16"
                                               VerticalOptions="Center"
                                               HorizontalOptions="Start" />

                                        <ImageButton Grid.Column="2"
                                                     Source="delete.png"
                                                     BackgroundColor="Transparent"
                                                     WidthRequest="24"
                                                     HeightRequest="24"
                                                     Command="{Binding BindingContext.EliminarTarjetaCommand, Source={x:Reference TarjetasCollectionView}}"
                                                     CommandParameter="{Binding .}"
                                                     VerticalOptions="Center" />
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    
                    <!-- BotÃ³n para agregar nueva tarjeta -->
                    <Button Text="AGREGAR TARJETA"
                            FontAttributes="Bold"
                            TextColor="Black"
                            BackgroundColor="White"
                            CornerRadius="10"
                            Margin="0,20,0,0"
                            Padding="10"
                            HorizontalOptions="FillAndExpand"
                            Clicked="OnAgregarTarjetaClicked"
                            BorderColor="#f5f5f5"
                            BorderWidth="4">
                        <Button.ImageSource>
                            <FileImageSource File="cardadd_green.png" />
                        </Button.ImageSource>
                    </Button>

                </VerticalStackLayout>
            </ScrollView>

            <!-- Cargando Overlay -->
            <Grid x:Name="LoadingOverlay"
                  BackgroundColor="#f5f5f5"
                  IsVisible="{Binding IsLoading}"
                  HorizontalOptions="FillAndExpand"
                  VerticalOptions="FillAndExpand"
                  ZIndex="2">
                <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                    <Image Source="loadinglogo.png" WidthRequest="80" HeightRequest="80"/>
                    <ActivityIndicator IsRunning="{Binding IsLoading}" Color="#009C40" />
                </StackLayout>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
